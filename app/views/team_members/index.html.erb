<section>
  <div class="new_container">
    <div class="col-md-12 meet_container">
      <div class="meet_text">
        <hr>
        <h3>MEET THE TEAM</h3>
        <hr>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-3 col-md-3 col-lg-3">
        <div class="side_bar">
          <div class="link-controls navs_bars">
            <ul>
              <li><%= link_to "ABOUT US", about_path(@about) %></li>
              <li><%= link_to "MEET THE TEAM", team_members_path(@the_teams) %></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="col-sm-9 col-md-9 col-lg-9">
        <div class="col-md-12">
          <div class="text_file">
            <p>Our team combines decades of experience building publicly traded technology companies, advising U.S.
              presidents, and managing international development projects.
            </p>
          </div>
        </div>
        <div id="member-grid" class="col-md-12 col-sm-12 col-xs-12">
          <% @team_members .each do |team_member| %>
            <div id="<%= dom_id(team_member) %>" class="col-md-2 col-sm-3 col-xs-6 member team clickablephoto">
                <div class="description">
                  <%= team_member.name %>
                  <%= team_member.position %>
                </div>
                <div class="photos_divs">
                  <%= image_tag team_member.image %>
                </div>
            </div>
          <% end %>
          <% @team_members.each do |team_member| %>
            <div class="bio">
              <p id="bio<%= dom_id(team_member) %>"><span id="name"><%= team_member.name %></span>
                <br><span id="position"><%= team_member.position %></span>
                <br><span id="teambio"><%= team_member.bio %></span></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
