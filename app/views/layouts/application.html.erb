<!DOCTYPE html>
<html>
  <head>
    <title>Taza</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
      <div id="wrapper">
        <nav class="navbar navbar-default navbar-fixed-top">
          <div class="container">
            <div class="navbar-header">
              <button type="button" data-toggle="collapse" data-target=".navbar-ex1-collapse" class="navbar-toggle">
                <span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar">
                </span><span class="icon-bar"></span></button><a href="/" class="navbar-brand">Taza</a>
            </div>
            <div class="collapse navbar-collapse navbar-right navbar-ex1-collapse">
              <ul class="nav navbar-nav">
                <li><%= link_to "About", '#' %></li>
                <li><%= link_to "What we do", '#' %></li>
                <li><%= link_to "Fellowship", '#' %></li>
                <% if current_user %>
                    <li class="strong"><strong><%= current_user.name %></strong>!</li>
                    <li class="active"><%= link_to "Sign out", signout_path, id: "sign_out" %></li>
                <% else %>
                    <li class="active"><%=link_to "Sign In", "/auth/google_oauth2", id: "sign_in" %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </nav>
              <% flash.each do |name, msg| -%>
                  <%= content_tag :div, msg, class: name %>
              <% end -%>
      <%= yield %>
        <footer>
          <div class="container">
            <div class="row">
              <div class="col-md-8">
                <ul class="list-inline">
                  <li><a href="/">Home</a></li>
                  <li class="footer-menu-divider">⋅</li>
                  <li><a href="/mentors">Mentors</a></li>
                  <li class="footer-menu-divider">⋅</li>
                  <li><a href="/fellows">Fellows</a></li>
                </ul>
              </div>
              <div class="col-md-4 text-right">
                <ul class="list-inline">
                  <li><a href="">© 2015 Taza</a></li>
                </ul>
              </div>
            </div>
          </div>
        </footer>
    </div>
  </body>
</html>
